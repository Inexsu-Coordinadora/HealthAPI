meta {
  name: MEDICO-INEXISTENTE
  type: http
  seq: 12
}

post {
  url: http://localhost:3000/api/citas/agendar
  body: json
}

body:json {
  {
    "idPaciente": 1,
    "idMedico": 9999,
    "idDisponibilidad": 1,
    "idConsultorio": 1,
    "fecha": "2025-11-17T16:00:00",
    "motivo": "Prueba con médico inexistente",
    "observaciones": "Debe fallar"
  }
}

tests {
  test("Status es 400 o 404 (médico no existe)", function() {
    expect(res.getStatus()).to.be.oneOf([400, 404]);
  });
  
  test("Respuesta menciona médico inexistente", function() {
    const error = res.body.error || res.body.mensaje || '';
    expect(error.toLowerCase()).to.include('médico');
    expect(error.toLowerCase()).to.include('inexistente');
  });
}
